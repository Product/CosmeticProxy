@{
    ViewBag.Title = "添加商品";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/swfupload/fileprogress.js"></script>
<script src="~/Content/swfupload/handlers.js"></script>
<script src="~/Content/swfupload/swfupload.js"></script>
<script src="~/Content/swfupload/swfupload.queue.js"></script>
<script type="text/javascript">
    var swfu;
    $(function () {
        var settings = {
            flash_url: "/Content/swfupload/swfupload.swf",
            upload_url: "http://admin.cosmeticproxy.com/Upload/UploadPic/",
            file_size_limit: "10 MB",
            file_types: "*.*",
            file_types_description: "图片类型",
            file_upload_limit: 1,
            file_queue_limit: 0,
            custom_settings: {
                progressTarget: "fsUploadProgress",
                cancelButtonId: "btnCancel"
            },
            debug: false,

            // Button settings
            button_image_url: "/Content/images/XPButtonUploadText_61x22.png",
            button_placeholder_id: "spanButtonPlaceHolder",
            button_width: 160,
            button_height: 22,
            button_text: '',
            button_text_style: ".theFont { font-size: 12;color:#0068B7; }",
            button_text_left_padding: 12,
            button_text_top_padding: 3,

            // The event handler functions are defined in handlers.js
            file_queued_handler: fileQueued,
            file_queue_error_handler: fileQueueError,
            file_dialog_complete_handler: fileDialogComplete,
            upload_start_handler: uploadStart,
            upload_progress_handler: uploadProgress,
            upload_error_handler: uploadError,
            upload_success_handler: uploadSuccess,
            upload_complete_handler: uploadComplete,
            queue_complete_handler: queueComplete	// Queue plugin event
        };

        swfu = new SWFUpload(settings);

        $("#AddProduct").click(function() {
            var pic = $("#uploadPic").val();
            if (pic == "") {
                alert("请上传商品图片");
                return false;
            }
            var brankName = $("#brankName").val();
            if (brankName == "") {
                alert("请填写品牌名称");
                return false;
            }

            var productName = $("#productName").val();
            if (productName == "") {
                alert("请填写商品名称");
                return false;
            }

            var productDesc = $("#productDesc").val();
            if (productDesc == "") {
                alert("请填写商品描述");
                return false;
            }

            var productPrice = $("#productPrice").val();
            if (productPrice == "") {
                alert("请填写商品价格");
                return false;
            }

            var categoryId = $("#categoryId").val();
            if (categoryId == 0) {
                alert("请选择区域");
                return false;
            }

            $.ajax({
                type: "post",
                url: "/Product/AddProduct",
                dataType: "json",
                data: {
                    Name: productName,
                    Brank: brankName,
                    Description: productDesc,
                    Price: productPrice,
                    Area: categoryId,
                    Pic: pic
                },
                success: function (data) {
                    if (data.IsSuccess) {
                        alert(data.Message);
                    } else {
                        alert(data.Message);
                    }
                },
                error: function(data) {
                    alert(data);
                }
            });
        });
    });
</script>

<h2>添加商品</h2>
<div class="c_finfo">
    <p>
        <label>
            上传图片：
        </label>
        <input id="uploadPic" name="Pic" type="text" class="input_w" />
        <div>
            <span id="spanButtonPlaceHolder"></span>
            @*<input id="btnCancel" type="button" value="取消全部上传" onclick="swfu.cancelQueue();" disabled="disabled" style="margin-left: 2px; font-size: 8pt; height: 22px;" />*@
        </div>
        @*<div class="fieldset flash" id="fsUploadProgress">
            <span class="legend">Upload Queue</span>
        </div>
        <div id="divStatus">0 个文件已经上传</div>*@
        </p>
    <div class="p_clear">
        <label>
            品牌名称：
        </label>
        <input id="brankName" name="Brank" type="text" class="input_w" />
    </div>
    <div class="p_clear">
        <label>
            商品名称：
        </label>
        <input id="productName" name="Name" type="text" class="input_w" />
    </div>
    <div class="p_clear">
        <label>
            商品描述：
        </label>
        <div class="a_pclose">
            <textarea id="productDesc" name="Description" style="width: 200px; height: 120px;"></textarea>
        </div>
    </div>
    <div class="p_clear">
        <label>
            代理价格：
        </label>
        <input id="productPrice" name="Price" type="text" class="input_w" />
    </div>
    <div class="p_clear">
        <label>
            区域：
        </label>
        <select id="categoryId" name="Area">
            <option value="0">区域选择</option>
            <option value="1">韩国</option>
            <option value="2">日本</option>
            <option value="3">欧美</option>
            <option value="4">其他</option>
        </select>
    </div>
    <p class="m_btn">
        <input type="button" class="btn_bg1" value="提交" id="AddProduct" />
    </p>
</div>